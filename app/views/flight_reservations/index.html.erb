<p id="notice"><%= notice %></p>

<h1>Flight Reservations</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Flight</th>
      <th>Seat</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flight_reservations.each do |flight_reservation| %>
      <tr>
        <td><%= flight_reservation.user_id %></td>
        <td><%= flight_reservation.flight_id %></td>
        <td><%= flight_reservation.seat_id %></td>
        <td><%= link_to 'Show', flight_reservation %></td>
        <td><%= link_to 'Edit', edit_flight_reservation_path(flight_reservation) %></td>
        <td><%= link_to 'Destroy', flight_reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

